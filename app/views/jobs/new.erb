<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6">
      <div class="card new-job">
        <div class="container">
          <h3 class="card-header">Add a Job</h3>
          <div class-"card-block">
            <%= bootstrap_form_for(@job) do |f| %>
            <% if @job.errors.any? %>
            <h3><%= pluralize(@job.errors.count, "error") %> prohibited this record from being saved:</h3>
            <ul>
              <% @job.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
              <% end %>
            </ul>
            <% end %>
            <%= f.text_field :company %>
            <%= f.text_field :title %>
            <%= f.text_field :city %>
            <%= f.text_field :state %>
            <%= f.text_field :salary %>
            <%= f.text_field :post_url %>
            <%= f.collection_select :status_id, @statuses, :id, :name %>

            <%= f.submit "Add Job", class: "btn-success" %>
            <% end %>
          </div>
        </div>

      </div>
    </div>
    <div class="col">
    </div>
  </div>
</div>
