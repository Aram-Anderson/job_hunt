<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6">
      <div class="card new-job">
        <div class="container">
          <h3 class="card-header">Edit This Job</h3>
          <div class-"card-block">
            <%= bootstrap_form_for(@job) do |f| %>
            <% if @job.errors.any? %>
            <h3><%= pluralize(@job.errors.count, "error") %> prohibited this record from being saved:</h3>
            <ul>
              <% @job.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
              <% end %>
            </ul>
            <% end %>
            <%= f.text_field :company, value: @job.company %>
            <%= f.text_field :title, value: @job.title %>
            <%= f.text_area :description, value: @job.description %>
            <%= f.text_field :city, value: @job.city %>
            <%= f.text_field :state, value: @job.state %>
            <%= f.text_field :salary, value: @job.salary %>
            <%= f.text_field :post_url, value: @job.post_url %>
            <%= f.collection_select :status_id, @statuses, :id, :name %>

            <%= f.submit "Update Job", class: "btn-success" %>
            <% end %>
          </div>
        </div>

      </div>
    </div>
    <div class="col">
    </div>
  </div>
</div>
